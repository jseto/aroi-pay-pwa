{
  "name": "aroi-pay-pwa",
  "version": "0.1.0",
  "description": "People's payment system for small amounts",
  "main": "index.js",
  "scripts": {
    "dev": "webpack serve",
    "dev-beta": "webpack serve --env runMode=beta",
    "dev-emulator": "npm run emulators && webpack serve --env runMode=emulators",
    "build": "webpack --mode=production",
    "build-beta": "webpack --mode=production --env runMode=beta",
    "deploy": "firebase deploy --project=production --only hosting",
    "deploy-beta": "firebase deploy --project=beta --only hosting",
    "emulators": "firebase emulators:start --project demo-test",
    "test": "jest",
    "debug": "node --inspect-brk node_modules/.bin/jest --runInBand --coverage false"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jseto/aroi-pay-pwa.git"
  },
  "keywords": [
    "payment",
    "pwa",
    "qrcode"
  ],
  "author": "Josep Seto",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/jseto/aroi-pay-pwa/issues"
  },
  "homepage": "https://github.com/jseto/aroi-pay-pwa#readme",
